@css {
	@import 'https://fonts.googleapis.com/css?family=Lato:400&.css'
}

@import 'nib'
@import '_icon'
@import 'animate.css'

global-reset()
reset-html5()

html
body
	display block
	background transparent
	font-family 'Lato'

#logo
	display block
	text-decoration none
	position absolute
	font-size 1.4rem
	margin-top -@font-size*0.5
	top 50%
	left .6rem
	icon("\e60b")
	color white

#album
	background white

#album__header
	background #690
	color white
	position relative
	text-align center

#album__title
	font-size 1.3rem
	padding 1rem 0
	text-align center
	display inline-block

#album__join
	position absolute
	top 50%
	right .6rem
	background white
	margin-right .5rem
	border-radius 2px
	display inline-block
	text-decoration none
	font-size .8rem
	color #690
	padding .4rem
	margin-top -@font-size*0.5-@padding

	-webkit-animation-name: tada;
	-moz-animation-name: tada;
	-o-animation-name: tada;
	animation-name: tada;
	-webkit-animation-duration:1s;
	-moz-animation-duration:1s;
	-o-animation-duration:1s;
	animation-duration:1s;
	-webkit-animation-fill-mode:both;
	-moz-animation-fill-mode:both;
	-o-animation-fill-mode:both;
	animation-fill-mode:both;
	-webkit-animation-delay:1s;
	-moz-animation-delay:1s;
	-o-animation-delay:1s;
	animation-delay:1s;

	// -webkit-transition all .1s ease-in
	&:hover
		box-shadow 0 0 8px rgba(255,255,255, .75)

#album__photos
	position relative
	width 100%
	overflow-x hidden
	overflow-y scroll
	padding 2px 0
	text-align center


.album__photo
	display inline-block
	margin 2px
	position relative
	overflow hidden
	line-height 0
	width 19%
	max-width 160px
	min-width 80px

.photo
	width 100%

.photo-info
	position absolute
	padding .5 rem
	bottom 0
	color white
	right 0
	left 0
	text-align center
	background rgba(0,0,0,.6)
	-webkit-transform translateY(40px)
	-webkit-transition all .16s linear
	.album__photo:hover &
		-webkit-transform translateY(0)

.photo-likes
	margin-right 16px
	icon("\e602")
	&:before
		margin-right 4px
	&:hover
		text-shadow 0 0 4px rgba(255,255,255,.4)

.photo-comments
	margin-right 16px
	icon("\e601")
	&:before
		margin-right 4px